@import '../../vars.styl'
@import '../../basic.styl'

+keyframes(ld-radio)
  0%
    animation-timing-function: cubic-bezier(.3,.27,.13,1)
  0%
    transform: scale(0.8)
    opacity: 0
  5%
    transform: scale(1.0)
    opacity: 1
  100%
    transform: scale(1.5)
    opacity: 0

.ld.ld-radio
  position: relative
  display: inline-block
  margin: 0
  padding: 0
  &:after
    animation(ld-radio 1s infinite)
    content: " "
    display: block
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    border: 6px solid #000
    border-radius: 50%
    background: none

.ld.ld-radio.square:after
  border-radius: 0
